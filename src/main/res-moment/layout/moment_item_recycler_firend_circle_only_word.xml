<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_FFFFFF"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@color/base_F2F2F2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_view_content_state"
            android:clickable="true"
            android:textColor="#697A9F"
            android:textSize="16sp" />

        <include layout="@layout/moment_include_item_recycler_content" />

        <include layout="@layout/moment_view_translation_layout" />

        <include layout="@layout/moment_include_item_recycler_location" />

        <include layout="@layout/moment_include_item_recycler_time" />

        <include layout="@layout/moment_include_item_recycler_praise_and_comment" />

        <View
            android:id="@+id/padingView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/red6" />

    </LinearLayout>
</FrameLayout>